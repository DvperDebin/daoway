  #outer_wrapper
    width 100%
    .header
      width 100%
      height 70px
      border-bottom 1px solid #ddd
      box-sizing border-box
      &.on
        animation showHeader 2s ease
        position fixed
        top 0
        left 0
        right 0
        background-color #ffffff
        z-index 999
        @keyframes showHeader{
          from {
            transform translateY(-100%)
          }
          to{
            transform translateY(0)
          }
        }
      .header_inner
        width 100%
        height 100%
        padding 2.5px 0
        box-sizing border-box
        .header_inner_container
          width 1200px
          margin 0 auto
          height 100%
          padding 0 15px
          box-sizing border-box
          overflow hidden
          >a
            display block
            float left
            >img
              margin-top 8px
              display block
          .header_right
            width 70%
            height 100%
            float right
            display flex
            .city
              height 70px
              line-height 60px
              >img
                vertical-align middle
              >span
                font-size 16px
                color black
                font-weight bold
            .nav
              display flex
              height 100%
              >div
                height 100%
                width 97px
                display flex
                >a
                  display block
                  width 100%
                  height 100%
                  line-height 60px
                  text-align right
                  font-size 16px
                  color black
                  font-weight bold
                  &.homepage
                    color #e94840;
                  &.seller
                    >span
                      padding 5px 5px
                      border-radius 7px
                      background-color #e94840
                      color #fff
                      font-weight bold
                      font-size 16px
    .slider_nav
      width 100%
      height 420px
      position relative
      .slider
        width 100%
        height 100%
        .swiper-container
          width 100%
          height 100%
          .swiper-wrapper
            width 100%
            height 100%
            .swiper-slide
              width 100%
              height 100%
              >a
                display block
                width 100%
                height 100%
                >img
                  display block
                  width 100%
                  height 100%
      .main_nav
        width 180px
        height 420px
        background-color #757881;
        position absolute
        left 380px
        top 0px
        z-index 100
        >ul
          width 100%
          height 100%
          >li
            height 42px
            width 100%
            >a
              display block
              height 100%
              width 100%
              line-height 42px
              padding-left 45px
              font-weight bold
              color #fff
              font-size 16px
              position relative
              box-sizing border-box
              >img
                position absolute
                right 35px
                top 20px
            .nav_seclv
              width 180px
              height 420px
              position absolute
              top 0
              left 180px
              z-index 30
              background-color rgba(255,255,255,0.9)
              display none
              >li
                height 42px
                width 100%
                >a
                  display block
                  height 100%
                  width 100%
                  line-height 42px
                  padding-left 45px
                  font-weight bold
                  color black
                  font-size 16px
                  position relative
                  box-sizing border-box
    .service
      width 100%
      height 516px
      padding-bottom 20px
      box-sizing border-box
      .service_inner
        width 1200px
        height 100%
        margin 0 auto
        padding 50px 0 0
        box-sizing border-box
        .service_main
          width 100%
          height 100%
          .service_desc
            width 100%
            >div
              width 100%
              &.title
                text-align center
                >span
                  color #3d3838
                  font-weight bold
                  font-size 28px
                  font-family "Microsoft YaHei"
              &.details
                text-align center
                margin-top 15px
                overflow hidden
                >span
                  font-size 22px
                  >a
                    color #333
                >a
                  font-size 18px
                  font-family "幼圆"
                  float right
          .sevice_info
            width 100%
            height 375px
            padding-top 30px
            box-sizing border-box
            .service_info_inner
              width 100%
              height 100%
              display flex
              >div
                flex 1
                margin 0 5px
                border 1px solid #eaeaea;
                width 230px
                height 345px
                >a
                  display block
                  height 100%
                  width 100%
                  padding 10px 10px
                  box-sizing border-box
                  >img
                    display block
                    width 210px
                  .title
                    width 100%
                    height 8px
                    padding 10px 0
                    font-size 16px
                    font-weight 800
                    color #000
                    overflow hidden
                    white-space nowrap
                    text-overflow ellipsis
                  .more_info
                    width 100%
                    height 48px
                    padding 5px 0
                    color: #929292;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    -webkit-line-clamp: 2;
                    -webkit-box-orient: vertical;
                    word-break: break-all;
                    font-size: 13px;
                    line-height: 18px;

                  .showinfo
                    width 100%
                    height 30px
                    .price
                      float left
                      line-height 20px
                      color #fb474f
                      font-weight 600
                      padding 5px 0
                      >span
                        font-size 20px
                    .check
                      float right
                      margin-top 5px
                      display block
                      width: 76px;
                      height: 24px;
                      line-height: 24px;
                      text-align: center;
                      background: #fb474f;
                      border-radius: 5px;
                      color: #fff;
                      font-size: 14px;
    .guarantee
      text-align center
      width 100%
      padding-top 60px
      background #fff
      >h2
        font-size 30px
        font-family "微软雅黑"
        font-weight 800
        margin 20px 0 13px 0
        >span
          color #fb474f
          font-weight 800
      >p
        font-size 22px
        color #3d3838
    .extra_service
      width 100%
      padding-top 20px
      background #fff
      height 66px
      font-family "微软雅黑"
      display flex
      justify-content center
      >div
        height 22px
        width 140px
        text-align: center;
        color: #1d1515;
        font-size: 18px;
        >img
          width 20px
          vertical-align middle
          marigin-right 10px
    .pop_city
      width 100%
      padding-top 50px
      margin-bottom 20px
      .pop_inner
        width 1200px
        margin 0 auto
        display flex
        .title
          width 10%
          height 100px
          font-size 18px
          font-weight 700
          font-family " 微软雅黑"
        .city_info
          width 90%
          display flex
          flex-wrap wrap
          >div
            width 100%
            display flex
            >a
              display block
              flex 1
    .coop
      width 100%
      background-color #FBF8F8
      .coop_inner
        width 1200px
        margin 0 auto
        .title
          color #1d1515
          font-size 18px
          padding-top 30px
          font-weight bold
        .coop_info
          width 100%
          display flex
          flex-wrap wrap
          >div
            margin-top 20px
            width 10%
            height 60px
            margin-left 1%
            background-color #fff
            >a
              display block
              height 100%
              width 100%
              text-align center
              >img
                width 100px
                height 100%
                display inline-block
    .legalInfo
      width 100%
      background-color #FBF8F8
      height 40
      .leagal_inner
        width 1200px
        height 100%
        line-height 40px
        margin 0 auto
        color #898989
        font-size 14px