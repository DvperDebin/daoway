html,body
  background-color #FBF8F8
  .seller_outer
    width 100%
    .header
      width 100%
      height 70px
      border-bottom 1px solid #ddd
      box-sizing border-box
      background-color #fff
      &.on
        animation showHeader 2s ease
        position fixed
        top 0
        left 0
        right 0
        background-color #ffffff
        z-index 999
        @keyframes showHeader{
          from {
            transform translateY(-100%)
          }
          to{
            transform translateY(0)
          }
        }
      .header_inner
        width 100%
        height 100%
        padding 2.5px 0
        box-sizing border-box
        .header_inner_container
          width 1200px
          margin 0 auto
          height 100%
          padding 0 15px
          box-sizing border-box
          overflow hidden
          >a
            display block
            float left
            >img
              margin-top 8px
              display block
          .header_right
            width 70%
            height 100%
            float right
            display flex
            .city
              height 70px
              line-height 60px
              >img
                vertical-align middle
              >span
                font-size 16px
                color black
                font-weight bold
            .nav
              display flex
              height 100%
              >div
                height 100%
                width 97px
                display flex
                >a
                  display block
                  width 100%
                  height 100%
                  line-height 60px
                  text-align right
                  font-size 16px
                  color black
                  font-weight bold
                  &.homepage
                    color #e94840;
                  &.seller
                    >span
                      padding 5px 5px
                      border-radius 7px
                      background-color #e94840
                      color #fff
                      font-weight bold
                      font-size 16px
    .main
      width 100%
      >h2
        width 1200px
        line-height: 85px;
        font-size: 18px;
        font-weight: 600;
        margin 0 auto
        >i
          font-style normal
        >a
          color #333
          font-weight: 600;
      .main_inner
        width 1200px
        margin 0 auto
        display flex
        .main_inner_left
          width 960px
          margin-right 10px
          .main_info
            width 100%
            height: 220px;
            border: 1px solid #e5e5e5;
            background: #fff;
            position relative
            >img
              margin 30px
              border: 1px solid #e5e5e5;
              width 160px
            >span
              display inline-block
              position absolute
              top 25px
              >span
                display block
                &.first
                  height 42px
                  line-height 42px
                  font-size 18px
                  color #1d1515
                &.second
                  height 42px
                  line-height 42px
                  color #333333
                  font-size 14px
                  >span:nth-child(1)
                    font-size: 20px;
                    color: #fc545e;
                    margin-left: 10px;
                    font-weight 700
                  >span:nth-child(2)
                    color  #fc545e
                    font-weight 700
                  >span:nth-child(3)
                    font-size: 14px;
                    color: #898989;
                    margin-left: 40px;
                &.third
                  height 42px
                  line-height 42px
                  font-size 14px
                  >span
                    color #fb474f
                    margin-left 10px


            .qrcode
              position absolute
              top 20px
              right 60px
              >span
                display block
                line-height 30px
                font-size 16px
                font-weight 700
                text-align center
                &.red
                  color #fb474f
          .main_detail
            width 960px
            margin-top 10px
            padding: 30px 20px;
            border: 1px solid #e5e5e5;
            box-sizing border-box
            background-color #fff
            margin-bottom 50px
            >span
              display block
              border-bottom: 3px solid #fb474f;
              padding: 5px;
              margin-top: 10px;
              width: 66px;
            .des_detail
              margin 15px 0 5px 0
              padding 9.5px
              box-sizing border-box
              line-height: 24px;
              font-size: 14px;
              color: #333;
              word-break: break-all;
              word-wrap: break-word;
              display block
              white-space: pre;
            >p
              line-height: 24px;
              margin: 15px 0 5px;
              font-size: 14px;
              white-space: pre-wrap;
              box-sizing: border-box;
              &.time
                >span
                  margin-left 20px
                  >span
                    color #fb474f
            .legal
              line-height: 24px;
              margin: 15px 0 5px;
              font-size: 14px;
              background: #fffcf1;
              display: block;
              padding: 9.5px;
              color: #333;
              word-break: break-all;
              word-wrap: break-word;
              box-sizing: border-box;
        .main_inner_right
          width 230px
          >a
            display block
            width 100%
            >img
              display block
              width 230px
          .qr
            width 230px
            height 290px
            background-image url("../images/swap.jpg")
            background-repeat no-repeat
            margin-top 10px
            >img
              width 130px
              margin 50px 0px 0px 50px
    .guarantee
      text-align center
      width 100%
      padding-top 60px
      background #fff
      >h2
        font-size 30px
        font-family "微软雅黑"
        font-weight 800
        margin 20px 0 13px 0
        >span
          color #fb474f
          font-weight 800
      >p
        font-size 22px
        color #3d3838
    .extra_service
      width 100%
      padding-top 20px
      background #fff
      height 66px
      font-family "微软雅黑"
      display flex
      justify-content center
      >div
        height 22px
        width 140px
        text-align: center;
        color: #1d1515;
        font-size: 18px;
        >img
          width 20px
          vertical-align middle
          marigin-right 10px
    .pop_city
      width 100%
      padding-top 50px
      margin-bottom 20px
      .pop_inner
        width 1200px
        margin 0 auto
        display flex
        .title
          width 10%
          height 100px
          font-size 18px
          font-weight 700
          font-family " 微软雅黑"
        .city_info
          width 90%
          display flex
          flex-wrap wrap
          >div
            width 100%
            display flex
            >a
              display block
              flex 1
    .legalInfo
      width 100%
      background-color #FBF8F8
      height 40
      .leagal_inner
        width 1200px
        height 100%
        line-height 40px
        margin 0 auto
        color #898989
        font-size 14px