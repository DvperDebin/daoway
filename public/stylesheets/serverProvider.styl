  #server_outer_wrapper
    width 100%
    .header
      width 100%
      height 70px
      border-bottom 1px solid #ddd
      box-sizing border-box
      &.on
        animation showHeader 2s ease
        position fixed
        top 0
        left 0
        right 0
        background-color #ffffff
        z-index 999
        @keyframes showHeader{
          from {
            transform translateY(-100%)
          }
          to{
            transform translateY(0)
          }
        }
      .header_inner
        width 100%
        height 100%
        padding 2.5px 0
        box-sizing border-box
        .header_inner_container
          width 1200px
          margin 0 auto
          height 100%
          padding 0 15px
          box-sizing border-box
          overflow hidden
          >a
            display block
            float left
            >img
              margin-top 8px
              display block
          .header_right
            width 70%
            height 100%
            float right
            display flex
            .city
              height 70px
              line-height 60px
              >img
                vertical-align middle
              >span
                font-size 16px
                color black
                font-weight bold
            .nav
              display flex
              height 100%
              >div
                height 100%
                width 97px
                display flex
                >a
                  display block
                  width 100%
                  height 100%
                  line-height 60px
                  text-align right
                  font-size 16px
                  color black
                  font-weight bold
                  &.homepage
                    color #e94840
                  &.seller
                    >span
                      padding 5px 5px
                      border-radius 7px
                      background-color #e94840
                      color #fff
                      font-weight bold
                      font-size 16px
    .server_main
      width 100%
      background-color #FBF8F8
      .main_inner
        width 1200px
        margin 0 auto
        >h2
          line-height 85px
          font-size 18px
          font-weight 600
        .main_info
          width 100%
          display flex
          .main_img
            width 80%
            display flex
            flex-wrap wrap
            .main_img_item
              width 232px
              height 300px
              border 1px solid #eaeaea
              padding 10px
              float left
              margin-right 10px
              margin-bottom 10px
              background #fff
              box-sizing border-box
              >a
                display block
                width 100%
                height 100%
                >img
                  display block
                  width 210px
                  height 210px
          .main_adv
            width 20%
            >a
              display block
              width 100%
              >img
                display block
                width 230px
            .qr
              width 230px
              height 290px
              background-image url("../images/swap.jpg")
              background-repeat no-repeat
              margin-top 10px
              >img
                width 130px
                margin 50px 0px 0px 50px