  #server_outer_wrapper
    width 100%
    .header
      width 100%
      height 70px
      border-bottom 1px solid #ddd
      box-sizing border-box
      &.on
        animation showHeader 2s ease
        position fixed
        top 0
        left 0
        right 0
        background-color #ffffff
        z-index 999
        @keyframes showHeader{
          from {
            transform translateY(-100%)
          }
          to{
            transform translateY(0)
          }
        }
      .header_inner
        width 100%
        height 100%
        padding 2.5px 0
        box-sizing border-box
        .header_inner_container
          width 1200px
          margin 0 auto
          height 100%
          padding 0 15px
          box-sizing border-box
          overflow hidden
          >a
            display block
            float left
            >img
              margin-top 8px
              display block
          .header_right
            width 70%
            height 100%
            float right
            display flex
            .city
              height 70px
              line-height 60px
              >img
                vertical-align middle
              >span
                font-size 16px
                color black
                font-weight bold
            .nav
              display flex
              height 100%
              >div
                height 100%
                width 97px
                display flex
                >a
                  display block
                  width 100%
                  height 100%
                  line-height 60px
                  text-align right
                  font-size 16px
                  color black
                  font-weight bold
                  &.homepage
                    color #e94840
                  &.seller
                    >span
                      padding 5px 5px
                      border-radius 7px
                      background-color #e94840
                      color #fff
                      font-weight bold
                      font-size 16px
    .server_main
      width 100%
      background-color #FBF8F8
      .main_inner
        width 1200px
        margin 0 auto
        >h2
          line-height 85px
          font-size 18px
          font-weight 600
        .main_info
          width 100%
          display flex
          .main_img
            width 85%
            display flex
            flex-wrap wrap
            .main_img_item
              width 232px
              height 300px
              border 1px solid #eaeaea
              padding 10px
              float left
              margin-right 10px
              margin-bottom 10px
              background #fff
              box-sizing border-box
              >a
                display block
                width 100%
                height 100%
                >img
                  display block
                  width 210px
                  height 210px
                >p
                  margin-top 15px
                  height 26px
                  line-height 26px
                  white-space nowrap
                  overflow hidden
                  text-overflow: ellipsis
                  >img
                    margin-bottom 5px
                    vertical-align middle
                    height 17px
                    width 18px
                  >span
                    font-size 16px
                    font-weight bold
                    color black
                .p
                  font-size 8px
                  margin-top 0
                  overflow hidden
                  line-height 26px
                  >span
                    float right
                    font-size 8px
                    color #929292
          .main_adv
            width 19%
            >a
              display block
              width 100%
              >img
                display block
                width 230px
            .qr
              width 230px
              height 290px
              background-image url("../images/swap.jpg")
              background-repeat no-repeat
              margin-top 10px
              >img
                width 130px
                margin 50px 0px 0px 50px
        .more_list
          width 85%
          height 152px
          text-align center
          cursor pointer
          >span
            display inline-block
            width 200px
            height 50px
            line-height 50px
            border 1px solid #e5e5e5
            border-radius 5px
            margin 50px 5px
            background #fff
            font-size 16px
            color #b1b1b1
            >img
              vertical-align middle
    .guarantee
      text-align center
      width 100%
      padding-top 60px
      background #fff
      >h2
        font-size 30px
        font-family "微软雅黑"
        font-weight 800
        margin 20px 0 13px 0
        >span
          color #fb474f
          font-weight 800
      >p
        font-size 22px
        color #3d3838
    .extra_service
      width 100%
      padding-top 20px
      background #fff
      height 66px
      font-family "微软雅黑"
      display flex
      justify-content center
      >div
        height 22px
        width 140px
        text-align: center;
        color: #1d1515;
        font-size: 18px;
        >img
          width 20px
          vertical-align middle
          marigin-right 10px
    .pop_city
      width 100%
      padding-top 50px
      margin-bottom 20px
      .pop_inner
        width 1200px
        margin 0 auto
        display flex
        .title
          width 10%
          height 100px
          font-size 18px
          font-weight 700
          font-family " 微软雅黑"
        .city_info
          width 90%
          display flex
          flex-wrap wrap
          >div
            width 100%
            display flex
            >a
              display block
              flex 1
